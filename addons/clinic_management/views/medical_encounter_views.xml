<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List -->
        <record id="view_medical_encounter_list" model="ir.ui.view">
            <field name="name">medical.encounter.list</field>
            <field name="model">medical.encounter</field>
            <field name="arch" type="xml">
                <list string="Encounters">
                    <field name="ref"/>
                    <field name="encounter_date"/>
                    <field name="patient_id"/>
                    <field name="doctor_user_id"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Form -->
        <record id="view_medical_encounter_form" model="ir.ui.view">
            <field name="name">medical.encounter.form</field>
            <field name="model">medical.encounter</field>
            <field name="arch" type="xml">
                <form string="Encounter">
                    <header>

                        <!-- Statusbar -->
                        <field name="state" widget="statusbar" statusbar_visible="in_progress,done"/>

                        <!-- Actions -->
                        <button name="action_close"
                                type="object"
                                string="Finalize"
                                class="btn-primary"
                                invisible="state == 'done'"/>

                        <button name="action_confirm"
                                type="object"
                                string="Reopen"
                                class="btn-secondary"
                                invisible="state != 'done'"/>
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="action"
                                    name="%(clinic_management.action_medical_prescription_from_encounter)d"
                                    class="oe_stat_button"
                                    icon="fa-file-medical">
                                <field name="prescription_count" widget="statinfo" string="Prescriptions"/>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="ref" readonly="1"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="patient_id" readonly="state == 'done'"/>
                                <field name="doctor_user_id" readonly="state == 'done'"/>
                            </group>
                            <group>
                                <field name="encounter_date" readonly="state == 'done'"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Clinical Note">
                                <group>
                                    <field name="chief_complaint" readonly="state == 'done'"/>
                                    <field name="present_illness" readonly="state == 'done'"/>
                                    <field name="physical_exam" readonly="state == 'done'"/>
                                    <field name="diagnosis" readonly="state == 'done'"/>
                                    <field name="plan" readonly="state == 'done'"/>
                                    <field name="notes" readonly="state == 'done'"/>
                                </group>
                            </page>

                            <page string="Vitals">
                                <group>
                                    <group string="Blood Pressure">
                                        <field name="bp_systolic" readonly="state == 'done'"/>
                                        <field name="bp_diastolic" readonly="state == 'done'"/>
                                    </group>
                                    <group string="Vitals">
                                        <field name="heart_rate" readonly="state == 'done'"/>
                                        <field name="resp_rate" readonly="state == 'done'"/>
                                        <field name="temperature" readonly="state == 'done'"/>
                                        <field name="spo2" readonly="state == 'done'"/>
                                    </group>
                                </group>

                                <group string="Anthropometrics">
                                    <field name="weight" readonly="state == 'done'"/>
                                    <field name="height" readonly="state == 'done'"/>
                                    <field name="bmi" readonly="1"/>
                                </group>
                            </page>

                            <page string="Lab Results">
                                <field name="lab_result_ids"
                                    mode="kanban,tree,form"
                                    context="{'default_encounter_id': id}"
                                    options="{'no_open': False}"
                                    readonly="state == 'done'"/>
                            </page>

                            <page string="Prescriptions">
                                <field name="prescription_ids"
                                    context="{'default_encounter_id': id}"
                                    readonly="state == 'done'">
                                    <list>
                                        <field name="ref"/>
                                        <field name="prescription_date"/>
                                        <field name="diagnosis"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <chatter/>
                </form>
            </field>
        </record>

                <!-- Form (READONLY for Patient -> Clinical History) -->
        <record id="view_medical_encounter_form_readonly" model="ir.ui.view">
            <field name="name">medical.encounter.form.readonly</field>
            <field name="model">medical.encounter</field>
            <field name="arch" type="xml">
                <form string="Encounter" create="0" edit="0" delete="0">
                    <header>
                        <!-- Statusbar visible, but readonly and without buttons -->
                        <field name="state"
                            widget="statusbar"
                            statusbar_visible="draft,in_progress,done"
                            readonly="1"/>
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="action"
                                    name="%(clinic_management.action_medical_prescription_from_encounter)d"
                                    class="oe_stat_button"
                                    icon="fa-file-medical">
                                <field name="prescription_count" widget="statinfo" string="Prescriptions"/>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="ref" readonly="1"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="patient_id" readonly="1"/>
                                <field name="doctor_user_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="encounter_date" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Clinical Note">
                                <group>
                                    <field name="chief_complaint" readonly="1"/>
                                    <field name="present_illness" readonly="1"/>
                                    <field name="physical_exam" readonly="1"/>
                                    <field name="diagnosis" readonly="1"/>
                                    <field name="plan" readonly="1"/>
                                    <field name="notes" readonly="1"/>
                                </group>
                            </page>

                            <page string="Vitals">
                                <group>
                                    <group string="Blood Pressure">
                                        <field name="bp_systolic" readonly="1"/>
                                        <field name="bp_diastolic" readonly="1"/>
                                    </group>
                                    <group string="Vitals">
                                        <field name="heart_rate" readonly="1"/>
                                        <field name="resp_rate" readonly="1"/>
                                        <field name="temperature" readonly="1"/>
                                        <field name="spo2" readonly="1"/>
                                    </group>
                                </group>

                                <group string="Anthropometrics">
                                    <field name="weight" readonly="1"/>
                                    <field name="height" readonly="1"/>
                                    <field name="bmi" readonly="1"/>
                                </group>
                            </page>

                            <page string="Lab Results">
                                <field name="lab_result_ids"
                                    mode="kanban,tree,form"
                                    options="{'no_open': False}"
                                    readonly="1"/>
                            </page>

                            <page string="Prescriptions">
                                <field name="prescription_ids" readonly="1">
                                    <list create="0" edit="0" delete="0">
                                        <field name="ref"/>
                                        <field name="prescription_date"/>
                                        <field name="diagnosis"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Search -->
        <record id="view_medical_encounter_search" model="ir.ui.view">
            <field name="name">medical.encounter.search</field>
            <field name="model">medical.encounter</field>
            <field name="arch" type="xml">
                <search string="Search Encounters">
                    <field name="ref"/>
                    <field name="patient_id"/>
                    <field name="doctor_user_id"/>
                    <field name="state"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_medical_encounter" model="ir.actions.act_window">
            <field name="name">Encounters</field>
            <field name="res_model">medical.encounter</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_medical_encounter_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first encounter
                </p>
            </field>
        </record>

    </data>
</odoo>