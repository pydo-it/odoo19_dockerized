<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_medical_prescription_tree" model="ir.ui.view">
            <field name="name">medical.prescription.tree</field>
            <field name="model">medical.prescription</field>
            <field name="arch" type="xml">
                <list>
                    <field name="ref"/>
                    <field name="prescription_date"/>
                    <field name="patient_id"/>
                    <field name="doctor_user_id"/>
                </list>
            </field>
        </record>
        <record id="view_medical_prescription_form" model="ir.ui.view">
            <field name="name">medical.prescription.form</field>
            <field name="model">medical.prescription</field>
            <field name="arch" type="xml">
                <form string="Prescription">
                    <header>
                        <!-- este botÃ³n llama al reporte -->
                        <button name="action_print_prescription"
                            type="object"
                            string="Imprimir receta"
                            class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="ref" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="encounter_id"/>
                                <field name="patient_id" readonly="1"/>
                                <field name="doctor_user_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="prescription_date"/>
                                <field name="diagnosis"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Medicamentos">
                                <field name="line_ids">
                                    <list editable="bottom">
                                        <field name="medicine"/>
                                        <field name="dose"/>
                                        <field name="route"/>
                                        <field name="frequency"/>
                                        <field name="duration"/>
                                        <field name="notes"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Indicaciones">
                                <field name="indications"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
        <record id="action_medical_prescription" model="ir.actions.act_window">
            <field name="name">Prescriptions</field>
            <field name="res_model">medical.prescription</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
